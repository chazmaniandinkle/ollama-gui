# Application settings
APP__HOST=127.0.0.1
APP__PORT=8000
APP__LOG_LEVEL=info

# Database settings
DATABASE__TYPE=sqlite
DATABASE__SQLITE__PATH=data/ollama_gui.db

# Authentication settings
AUTH__JWT_SECRET=change_this_to_a_long_secure_random_string
AUTH__JWT_EXPIRY=24h

# Provider settings - Ollama
PROVIDERS__OLLAMA__ENABLED=true
PROVIDERS__OLLAMA__BASE_URLS=http://ollama:11434

# Provider settings - OpenAI (optional)
PROVIDERS__OPENAI__ENABLED=false
PROVIDERS__OPENAI__API_KEY=your_openai_api_key

# Provider settings - Anthropic (optional)
PROVIDERS__ANTHROPIC__ENABLED=false
PROVIDERS__ANTHROPIC__API_KEY=your_anthropic_api_key

# RAG settings
RAG__ENABLED=true
RAG__VECTOR_DB_PATH=data/vector_db
RAG__EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Frontend settings
VITE_API_URL=http://localhost:8000/api
